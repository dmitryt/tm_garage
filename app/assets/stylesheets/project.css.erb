.b-project {
	width: 715px;
	background-color: #fff;
	border-radius: 0 0 10px 10px;
	-webkit-border-radius: 0 0 10px 10px;
	-moz-border-radius: 0 0 10px 10px;
	-o-border-radius: 0 0 10px 10px;
	font-family: Arial;
	font-size: 12px;
	overflow: hidden;
}

.b-project .h-empty-list {
	line-height: 3em;
	font-size: 14px;
	font-style: italic;
	color: #ccc;
	text-align: center;
}

.b-project .i-edit,
.b-project .i-delete,
.b-project .i-change-priority {
	background-image: url(<%= asset_path 'glyphicons-halflings.png' %>);
	width: 14px;
	height: 14px;
	display: inline-block;
}

.b-project .i-edit {
	background-position: 0 -72px;
}

.b-project .i-delete {
	background-position: 13px 0;
}

.b-project .i-change-priority {
	background-position: 37px -120px;
}

.b-project .delimiter {
	display: inline-block;
	height: 15px;
	margin: 0 5px;
	width: 1px;
	background-color: #999;
}

.b-project-title {
	font-size: 1.3333em;
	line-height: 2.5em;
	padding: 0 75px 0 50px;
	position: relative;
	color: #fff;
	cursor: pointer;
	background: #3c6aa8; /* for non-css3 browsers */

	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#5280b9', endColorstr='#3c5c9d'); /* for IE */
	background: -webkit-gradient(linear, left top, left bottom, from(#5280b9), to(#3c5c9d)); /* for webkit browsers */
	background: -moz-linear-gradient(top,  #5280b9,  #3c5c9d); /* for firefox 3.6+ */
}

.b-project-title .b-edit {
	position: absolute;
	right: 10px;
	top: 5%;
	height: 95%;
	visibility: hidden;
}

.b-project-title:hover .b-edit {
	visibility: visible;
}

.b-project-title .i-list {
	position: absolute;
	width: 24px;
	height: 28px;
	left: 10px;
	background-image: url(<%= asset_path 'big_icons.png' %>);
	top: 5px;
}

.b-project-task-add {
	background-color: #dcdcdc;
	padding: 8px 15px;
	position: relative;
}

.b-project-task-add .b-input,
.b-project-task-add .b-add-btn {
	display: inline-block;
	height: 26px;
	line-height: 26px;
}

.b-project-task-add .i-add,
.b-project-add-btn i {
	width: 26px;
	height: 26px;
	background-image: url(<%= asset_path 'big_icons.png' %>);
	background-position: 0 -28px;
	position: absolute;
	margin-top: 3px;
}

.b-project-task-add .b-input {
	width: 520px;
	padding: 2px 5px;
	border-right: 0;
	border-bottom: 0;
	margin-left: 40px;
}

.b-project-task-add .b-add-btn {
	color: #fff;
	padding: 2px 27px;
	border: 1px solid #447557;
	border-radius: 0 10px 10px 0;
	-webkit-border-radius: 0 10px 10px 0;
	-moz-border-radius: 0 10px 10px 0;
	-o-border-radius: 0 10px 10px 0;
	margin: 0 0 0 -3px;
	height: 32px;
	font-size: 1.166667em;
	

	background: #6ca384; /* for non-css3 browsers */

	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#8cc3a6', endColorstr='#508767'); /* for IE */
	background: -webkit-gradient(linear, left top, left bottom, from(#8cc3a6), to(#508767)); /* for webkit browsers */
	background: -moz-linear-gradient(top,  #8cc3a6,  #508767); /* for firefox 3.6+ */
}

.b-project-task-list {
	min-height: 51px;
}

.b-project-task-list .b-row {
	font-weight: bold;
	font-size: 14px;
	height: 50px;
	line-height: 50px;
	color: #acacac;
	border-bottom: 1px solid #e7ebea;
	cursor: pointer;
	position: relative;
}

.b-project-task-list .b-checkbox {
	border-right: 1px solid #efdadf;
	width: 40px;
	text-align: center;
	float: left;
}

.b-project-task-list .b-title {
	border-left: 1px solid #efdadf;
	border-right: 1px solid #e7ebea;
	margin-left: 50px;
	margin-right: 90px;
	padding-left: 10px;
}

.b-project-task-list .b-edit {
	visibility: hidden;
	float: right;
	padding: 0 10px;
	width: 70px;
}

.b-project-task-list .b-row:hover {
	background-color: #fcfed5;
}

.b-project-task-list .b-row:hover .b-edit {
	visibility: visible;
}

.b-project-task-list .h-finished .b-row {
	background-color: #eee;
	cursor: default;
}

.b-project-task-list .h-finished .b-row .b-edit {
	visibility: hidden;
}

.b-project-task-list .h-finished .b-row .b-title {
	text-decoration: line-through;
	font-style: italic;
}

.b-project-task-list .b-row .tooltip {
	position: absolute;
	top: -999px;
	left: -999px;
}


/* Add btn */
.b-project-add-btn {
	font-size: 1.3333em;
	line-height: 2.5em;
	padding: 0 30px 0 45px;
	position: relative;
	color: #fff;
	cursor: pointer;
	background: #3c6aa8; /* for non-css3 browsers */

	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#5280b9', endColorstr='#3c5c9d'); /* for IE */
	background: -webkit-gradient(linear, left top, left bottom, from(#5280b9), to(#3c5c9d)); /* for webkit browsers */
	background: -moz-linear-gradient(top,  #5280b9,  #3c5c9d); /* for firefox 3.6+ */	
}

.b-project-add-btn i {
	left: 10px;
	top: 10px;
}
