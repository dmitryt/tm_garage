html, body{
	padding:0;
	margin:0;
	height:100%;
	position:relative; 
}

body {
	background: url(<%= asset_path 'bgd.png' %>) repeat-x;
	background-color: #ba5d0c;
}

.b-page {
	min-height: 700px;
	position: relative;
	padding-bottom: 100px;
	z-index: 1;
}
	
.b-page-title {
	text-transform: uppercase;
	text-align: center;
	font-size: 2em;
	font-weight: bold;
}

.b-page-title .sub {
	font-size: 0.6em;
	font-weight: normal;
}

.b-head {
	height: 1.5em;
	line-height: 1.5em;
	text-align: right;
	padding-right: 10px;
	background-color: #aaa;
}

.b-footer {
	height: 100px;
	margin-top: -100px;
	text-align: center;
	position: relative;
	z-index: 2;
}

.b-footer .copy {
	color: #fff;
	margin-top: 15px;
}

.ui-dialog {
	font-size: 14px;
}

.ui-dialog .ui-dialog-content {
	padding: 8px;
}

.ui-dialog form .errors {
	color: red;
}

.tooltip {
	position: absolute;
	z-index: 2;
	top: -999px;
	left: -999px;
	margin-top: 15px;
	margin-left: -5px;
	border: 1px solid #AAA;
	border-radius: 5px;
	background-color: #EEE;
	padding: 0 8px 2px 0;
}
